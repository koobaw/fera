{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "moduleNameMapper": {
    "@fera-next-gen/firestore-batch": "<rootDir>../../../../packages/firestore/src",
    "^@fera-next-gen/(.*)$": "<rootDir>../../../../packages/$1/src"
  },
  "modulePaths": ["../"],
  "moduleDirectories": ["node_modules"]
}
