{
  "name": "user",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run start:dev",
    "build": "npm run clean && nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/user/src/main",
    "lint": "npm run format && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests"
  },
  "dependencies": {
    "@fera-next-gen/common": "*",
    "@fera-next-gen/exception": "*",
    "@fera-next-gen/firestore-batch": "*",
    "@fera-next-gen/guard": "*",
    "@fera-next-gen/interceptor": "*",
    "@fera-next-gen/logging": "*",
    "@fera-next-gen/salesforce-api": "*",
    "@fera-next-gen/types": "*",
    "@google-cloud/firestore": "^6.5.0",
    "@google-cloud/secret-manager": "^4.2.2",
    "@google-cloud/tasks": "^4.0.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.0.0",
    "axios": "^1.3.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "firebase-admin": "^11.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@fera-next-gen/test": "*",
    "@nestjs/cli": "9.3.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "eslint-config-custom": "*",
    "jest": "29.5.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig": "*",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.5.3"
  }
}
