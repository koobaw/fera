{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "moduleNameMapper": {
    "@fera-next-gen/firestore-batch": "<rootDir>/../../../packages/firestore/src",
    "^@fera-next-gen/(.*)$": "<rootDir>/../../../packages/$1/src"
  },
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["node_modules"]
}
